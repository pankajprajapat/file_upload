<div class="container">
  <h1>Documents</h1>
  <%= link_to "New document", new_document_path %>

  <table border="3">
     <thead>
        <tr>
           <th>Title</th>
           <th>Description</th>
           <th>Attachment</th>
           <th>Short URL</th>
           <th>Action</th>
        </tr>
     </thead>
     <tbody>
        <% @documents.each do |document| %>
           <tr>
              <td><%= document.title %></td>
              <td><%= document.description %></td>
              <td><%= link_to document.attachment_identifier, document.attachment_url %></td>
              <td><%= short_url("http://localhost:3000/", owner: document) %></td>
              <td><%= link_to "Delete",  document, method: :delete, confirm: "Are you sure you want to delete #{document.title}?" %></td>
           </tr>
        <% end %>
     </tbody>
  </table>
</div>
